{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/js/*"],
      "@/lib/*": ["./resources/js/lib/*"]
    },
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "resources/js/**/*",
    "resources/js/pages/**/*",
    "resources/js/components/**/*",
    "resources/js/lib/**/*"
  ],
  "exclude": ["node_modules", "vendor", "storage", "bootstrap", "public"]
}
